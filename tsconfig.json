{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2018",
      "scripthost"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}